# Production environment file for server deployment
# Copy this to /root/kleatsv2/.env.local on the server

# Backend API URL (internal - where the actual backend runs)
API_BASE_URL=http://127.0.0.1:3000

# Public API URL (what the frontend client uses - goes through Next.js proxy)
NEXT_PUBLIC_API_URL=/api/proxy

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=387570292078-5cdv3bq7vpmksqjs34rcs4sdj8837n0i.apps.googleusercontent.com
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=https://kleats.in/login

# App settings
NEXT_PUBLIC_LOCK=0
NEXT_PUBLIC_CASHFREE=TRUE
NEXT_PUBLIC_CASHFREE_MODE=production
NEXT_PUBLIC_FREECANE_ENABLED=false

# Frontend port (used by server.mjs)
FRONTEND_PORT=3001

# Toggle maintenance mode on the frontend. Set to "true" to force the maintenance banner.
NEXT_PUBLIC_MAINTENANCE=false
